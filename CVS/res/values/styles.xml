<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="MyTheme" parent="Theme.AppCompat.Light"></style>

    <style name="MyTheme.WithActionBar" parent="@style/MyTheme">
        <item name="android:actionMenuTextAppearance">@style/MyABmenuTextAppearance</item><!-- 使用自定义的菜单文本风格 -->
        <item name="android:actionMenuTextColor">#FFFFFF</item> <!-- 定义ActionItem字体颜色 -->
        <item name="android:actionBarStyle">@style/MyActionBarStyle</item> 
    </style>
    
    <!-- 使用自定义的actionBarStyle -->
    <style name="MyActionBarStyle" parent="android:style/Widget.DeviceDefault.ActionBar">
        <item name="android:background">@color/BaseColor</item><!-- 定义ActionBar背景颜色 -->
        <item name="android:titleTextStyle">@style/MyTitleTextStyle</item> 
        <item name="android:subtitleTextStyle">@style/MySubTitleTextStyle</item>
    </style>

    <!-- 修改标题字体大小及颜色 -->
    <style name="MyTitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- 修改子标题字体颜色 -->
    <style name="MySubTitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Subtitle">
        <item name="android:textColor">#FFC0CB</item>
    </style>

    <style name="MyABmenuTextAppearance" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Menu">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">normal</item> <!-- 修改AB菜单项字体风格 -->
    </style>

    <style name="GProgressDialog" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item> <!-- //无标题 -->
        <item name="android:windowBackground">@null</item> <!-- //背景 -->
        <item name="android:windowIsFloating">true</item> <!-- //悬浮 -->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="BaseButton">
        <item name="android:background">@drawable/base_button_bg</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="RightAngleBaseButton">
        <item name="android:background">@drawable/right_angle_button_bg</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="SettleAccountTitle" >
        <item name="android:background">#ffffff</item>
        <item name="android:padding">8dip</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    
    <style name="SettleAccountItem" >
        <item name="android:padding">2dip</item>
        <item name="android:background">#ffffff</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#555555</item>
    </style>

    <style name="AddressAddItemTitle" >
        <item name="android:layout_width">0dip</item>
        <item name="android:padding">10dip</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_weight">1</item>
    </style>
    
    <style name="AddressAddItemContent" >
        <item name="android:layout_width">0dip</item>
        <item name="android:padding">10dip</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_weight">2</item>
    </style>
    
    <style name="AccountText">
        <item name="android:textColor">@color/AccountText</item>
        <item name="android:gravity">center_vertical</item>
		<item name="android:textSize">18sp</item>
        <item name="android:drawableRight">@drawable/right_arrow</item>
        <item name="android:padding">10dip</item>
        <item name="android:drawablePadding">10dip</item>
    </style>
    
</resources>